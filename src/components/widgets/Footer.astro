---
import { Icon } from 'astro-icon/components';
import { SITE } from 'astrowind:config';
import { getHomePermalink } from '~/utils/permalinks';
import type { FooterData as Props } from '~/types';

const { socialLinks = [], secondaryLinks = [], links = [], footNote = '', theme = 'light' } = Astro.props;
---

<footer
  class:list={[{ dark: theme === 'dark' }, 'relative border-t border-neutral-200 dark:border-neutral-800 not-prose']}
>
  <div class="dark:bg-dark absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div
    class="relative max-w-7xl mx-auto px-4 sm:px-6 intersect-once intersect-quarter intercept-no-queue motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
  >
    <div class="grid grid-cols-12 gap-4 gap-y-8 sm:gap-8 pt-8 md:pt-12 lg:gap-2">
      <div class="col-span-12 sm:col-span-3 md:col-span-6 lg:col-span-9">
        <div class="mb-2">
          <a class="inline-block font-bold text-xl" href={getHomePermalink()}>{SITE?.name}</a>
        </div>
        <div class="text-xs text-muted flex gap-1">
          {
            secondaryLinks.map(({ text, href }, index) => (
              <>
                {index !== 0 ? ' Â· ' : ''}
                <a class="text-muted hover:text-primary hover:underline" href={href} set:html={text} />
              </>
            ))
          }
        </div>
      </div>
      {
        links.map(({ text, links }) => (
          <div class="col-span-6 sm:col-span-3 md:col-span-2 lg:col-span-1">
            <div class="font-medium mb-2">{text}</div>
            {links && Array.isArray(links) && links.length > 0 && (
              <ul class="text-xs">
                {links.map(({ text, href, ariaLabel, icon, openInNewTab }) => (
                  <li class="mb-2">
                    <a
                      class="text-muted hover:text-primary hover:underline flex items-stretch gap-1"
                      href={href}
                      aria-label={ariaLabel}
                      target={openInNewTab ? '_blank' : undefined}
                      rel={openInNewTab ? 'noopener noreferrer' : undefined}
                    >
                      <Fragment set:html={text} />
                      {icon && <Icon name={icon} class="size-[unset]" />}
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </div>
        ))
      }
    </div>
    <div class="md:flex md:items-center md:justify-between py-6 md:py-8">
      {
        socialLinks?.length ? (
          <ul class="flex mb-4 md:order-1 -ml-2 md:ml-4 md:mb-0 rtl:ml-0 rtl:-mr-2 rtl:md:ml-0 rtl:md:mr-4">
            {socialLinks.map(({ ariaLabel, href, text, icon }) => (
              <li>
                <a
                  class="text-muted dark:text-neutral-400 hover:bg-neutral-100 dark:hover:bg-neutral-700 focus:outline-none focus:ring-4 focus:ring-neutral-200 dark:focus:ring-neutral-700 rounded-lg text-xs p-2.5 inline-flex items-center"
                  aria-label={ariaLabel}
                  href={href}
                >
                  {icon && <Icon name={icon} class="w-5 h-5" />}
                  <Fragment set:html={text} />
                </a>
              </li>
            ))}
          </ul>
        ) : (
          ''
        )
      }

      <div class="text-xs mr-4 dark:text-muted">
        <Fragment set:html={footNote} />
      </div>
    </div>
  </div>
</footer>
