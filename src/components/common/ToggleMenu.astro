---
export interface Props {
  label?: string;
  class?: string;
  expanded?: boolean;
}

const {
  label = 'Toggle Menu',
  class: className = 'flex flex-col h-12 w-12 rounded justify-center items-center cursor-pointer group',
  expanded = false,
} = Astro.props;
---

<button type="button" class:list={[className, { expanded }]} aria-label={label} data-aw-toggle-menu>
  <span class="sr-only">{label}</span>
  <slot>
    <span
      aria-hidden="true"
      class="h-1 w-6 my-0.5 bg-primary transition ease transform duration-200 group-[.expanded]:rotate-45 group-[.expanded]:translate-y-2"
    ></span>
    <span
      aria-hidden="true"
      class="h-1 w-6 my-0.5 bg-primary transition ease transform duration-200 group-[.expanded]:opacity-0"></span>
    <span
      aria-hidden="true"
      class="h-1 w-6 my-0.5 bg-primary transition ease transform duration-200 group-[.expanded]:-rotate-45 group-[.expanded]:-translate-y-2"
    ></span>
  </slot>
</button>
